{%
	set classes = [
		'node',
		'node-detail',
		'node--type-' ~ node.bundle|clean_class,
		node.isPromoted() ? 'node--promoted',
		node.isSticky() ? 'node--sticky',
		not node.isPublished() ? 'node--unpublished',
		view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
		'clearfix',
	]
%}
   
  <!-- Start Display doctor for detail page -->
  
  <div class="doctor-block-two">
    <div class="inner-box">
        <div class="left-column">
            <div class="image">{{content.field_doctor_profile_pic}}</div>
            <div class="content">
                <h4><a href="doctor-details.html">{{content.field_doctor_name}}</a></h4>
                <div class="designation">{{content.field_doctor_specialty}}</div>
                <div class="rating">
                    {{content.field_doctor_rating}}
                    <span>(38)</span>
                </div>
            </div>
        </div>
        <div class="right-column">
            <div class="content-two">
                <ul class="list">
                    <li><i class="fas fa-map-marker-alt"></i> tehran</li>
                    <li><i class="fas fa-award"></i>exp</li>
                    <li><i class="fas fa-calendar-week"></i> </li>
                </ul>
                <div class="link-btn">
                    <a href="doctor-details.html" class="theme-btn">ویزیت</a>
                    <a href="#" class="like"><i class="far fa-heart"></i></a>
                </div>
            </div>
        </div>
    </div>



    <div class="gsc-tabs ">
        <div class="tabs_wrapper tabs_">
           <ul class="nav nav-tabs">
             <li><a class="active show" data-bs-toggle="tab" href="#desc1">  درباره </a></li>
             <li><a class="" data-bs-toggle="tab" href="#clinics1">  کلینیک </a></li>
             <li><a class="" data-bs-toggle="tab" href="#reviews1">  نظرات کاربران </a></li>
             <li><a class="" data-bs-toggle="tab" href="#cert1">  گواهینامه </a></li>

           </ul>
           <div class="tab-content">
            
                    <div id="desc1" class="tab-pane fade in active show">
                        <p>{{content.body}}
                        </p>
                        </div>
                    <div id="clinics1" class="tab-pane fade in ">{{ page.user1 }}
                    </div>
                    <div id="reviews1" class="tab-pane fade in ">{{content.field_doctor_reviews}}</div>
                    <div id="cert1" class="tab-pane fade in ">{{content.field_doctor_certificates}}</div>

              
           </div>
        </div>
     </div>