<header id="header" class="header-two">

  		<div class="header-two__top">
	 		<div class="header-two__content">
	 			<div class="header-two__inner">
			 		<div class="header-two__branding">
						{% if page.branding %}
						  {{ page.branding }}
						{% endif %}
			 		</div>
			 		<div class="header-two__top-right">
				 		{% if page.header_right %}
							{{ page.header_right }}
						{% endif %}
					</div>
				</div>
			</div>
		</div>
		<div class="header-two__main">
			<div class="header-two__content">
				<div class="header-two__inner">
			
				 	<div class="header-two__main-menu">
						<div class="gva-offcanvas-mobile">
					  		<div class="close-offcanvas hidden"><i class="fa fa-times"></i></div>
					  		<div class="main-menu-inner">
						 		{% if page.main_menu %}
									{{ page.main_menu }}
						 		{% endif %}
					  		</div>
						  	{% if page.offcanvas %}
							 	<div class="after-offcanvas hidden">
									{{ page.offcanvas }}
							 	</div>
						  	{% endif %}
						</div>
					
						<div id="menu-bar" class="menu-bar menu-bar-mobile d-xxl-none d-xl-none">
					  		<span class="one"></span>
					  		<span class="two"></span>
					  		<span class="three"></span>
						</div>
				 	</div>
			  		<div class="header-two__right">
					 	{% if page.search %}
							<div class="search-one__box style-white">
							  	<span class="search-one__icon"><span class="icomoon-magnifying-glass"></span></span>
							  	<div class="search-one__content">  
								 	{{ page.search }}
							  	</div>  
							</div>
					 	{% endif %}

				 		{% if link_request %}		
						<div class="header-one__button">
	                        <div class="header-action">
	                            <a href="{{link_request}}" class="btn-theme btn-small"><span>{{ 'Get a Quote'|t }}</span></a>
	                        </div>
						</div>
						{% endif %} 
			  		</div>  
		  		</div>
			</div>
  		</div>

</header>

